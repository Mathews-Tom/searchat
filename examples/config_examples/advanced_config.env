# Advanced Configuration Example
# Complete list of all available environment variables

# ============================================================================
# Paths
# ============================================================================

# Main data directory
SEARCHAT_DATA_DIR=C:/Users/YourUsername/.searchat

# Windows Claude projects directory
SEARCHAT_WINDOWS_PROJECTS_DIR=C:/Users/YourUsername/.claude/projects

# WSL Claude projects directory (Windows only)
SEARCHAT_WSL_PROJECTS_DIR=\\wsl$\Ubuntu\home\username\.claude

# Additional conversation directories (colon-separated on Unix, semicolon on Windows)
# SEARCHAT_ADDITIONAL_DIRS=/path/to/dir1:/path/to/dir2

# Auto-detect environment (true/false)
SEARCHAT_AUTO_DETECT=true

# ============================================================================
# Web Server
# ============================================================================

# Server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
SEARCHAT_HOST=0.0.0.0

# Server port (1-65535)
SEARCHAT_PORT=8000

# ============================================================================
# Indexing
# ============================================================================

# Number of conversations to process in each batch
SEARCHAT_INDEX_BATCH_SIZE=1000

# Automatically index new conversations
SEARCHAT_AUTO_INDEX=true

# Auto-index interval in minutes
SEARCHAT_INDEX_INTERVAL=60

# Number of parallel workers for indexing
SEARCHAT_MAX_WORKERS=4

# ============================================================================
# Search
# ============================================================================

# Default search mode: keyword, semantic, or hybrid
SEARCHAT_DEFAULT_MODE=hybrid

# Maximum number of results to return
SEARCHAT_MAX_RESULTS=100

# Length of text snippets in results (characters)
SEARCHAT_SNIPPET_LENGTH=200

# ============================================================================
# Embedding Model
# ============================================================================

# Sentence transformer model for semantic search
SEARCHAT_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Batch size for embedding generation
SEARCHAT_EMBEDDING_BATCH_SIZE=32

# Cache embeddings to disk (true/false)
SEARCHAT_CACHE_EMBEDDINGS=true

# ============================================================================
# Performance
# ============================================================================

# Memory limit in MB
SEARCHAT_MEMORY_LIMIT_MB=3000

# Query result cache size (number of queries)
SEARCHAT_QUERY_CACHE_SIZE=100

# Enable performance profiling (true/false)
SEARCHAT_ENABLE_PROFILING=false

# ============================================================================
# UI (Web Interface)
# ============================================================================

# Theme: auto, light, or dark
SEARCHAT_THEME=auto

# Font family
SEARCHAT_FONT_FAMILY=Segoe UI

# Font size (points)
SEARCHAT_FONT_SIZE=11

# Highlight color (hex)
SEARCHAT_HIGHLIGHT_COLOR=#FFEB3B

# ============================================================================
# Isolation Mode (Advanced)
# ============================================================================

# Enable isolation mode to run multiple variants
# SEARCHAT_ISOLATION_MODE=true

# Variant suffix for isolated installations
# SEARCHAT_VARIANT_SUFFIX=-variant1
