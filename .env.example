# Searchat Environment Configuration
#
# Copy this file to ~/.searchat/.env and customize for your system
#
# Priority: Environment variables (this file) > settings.toml > defaults
#

# ============================================================================
# Path Configuration
# ============================================================================

# Data directory for search indexes and caches
# Default: ~/.searchat
SEARCHAT_DATA_DIR=

# Windows Claude projects directory
# Default: ~/.claude/projects
SEARCHAT_WINDOWS_PROJECTS_DIR=

# WSL Claude projects directory (Windows + WSL dual setup only)
# Leave empty if not using WSL
# Example: \\wsl$\Ubuntu\home\username\.claude\projects
SEARCHAT_WSL_PROJECTS_DIR=

# Additional Claude project directories (comma-separated)
# Use this if you have multiple locations
SEARCHAT_ADDITIONAL_DIRS=

# ============================================================================
# Web Server Configuration
# ============================================================================

# Port for web interface
# Default: 8000 (will auto-increment if busy)
SEARCHAT_PORT=8000

# Host address
# Default: 0.0.0.0 (accessible from network)
# Use 127.0.0.1 for localhost-only access
SEARCHAT_HOST=0.0.0.0

# ============================================================================
# Advanced Configuration (Optional)
# ============================================================================

# Memory limit in MB
# Default: 3000
SEARCHAT_MEMORY_LIMIT_MB=

# Embedding model
# Default: all-MiniLM-L6-v2
SEARCHAT_EMBEDDING_MODEL=

# Embedding batch size
# Default: 32
SEARCHAT_EMBEDDING_BATCH_SIZE=

# Query cache size
# Default: 100
SEARCHAT_QUERY_CACHE_SIZE=

# Enable profiling (for development)
# Default: false
SEARCHAT_ENABLE_PROFILING=

# ============================================================================
# Isolation Mode (Advanced Users)
# ============================================================================

# Enable variant isolation
# When enabled, data_dir gets variant suffix automatically
# Default: false
SEARCHAT_ISOLATION_MODE=false

# Variant suffix (only used if isolation_mode=true)
# Default: ''
SEARCHAT_VARIANT_SUFFIX=
